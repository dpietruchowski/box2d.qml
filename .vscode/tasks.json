{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Kill Box2D App",
            "type": "shell",
            "command": "pkill -f box2d_app || true",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Build and Kill Previous",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Kill Box2D App",
                "CMake: Build"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build/Desktop-Debug",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build/Desktop-Debug",
                "--config",
                "Debug",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "CMake: Configure"
            ]
        },
        {
            "label": "CMake: Build All",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build/Desktop-Debug",
                "--config",
                "Debug",
                "--parallel",
                "--target",
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build/Desktop-Debug",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Rebuild",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: Clean",
                "CMake: Build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run Box2D App",
            "type": "shell",
            "command": "${workspaceFolder}/build/Desktop-Debug/app/box2d_app",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceFolder}/build/Desktop-Debug/lib:${workspaceFolder}/build/Desktop-Debug/third_party/box2d/src",
                    "QT_QPA_PLATFORM": "xcb"
                }
            },
            "group": "none",
            "problemMatcher": [],
            "dependsOn": "CMake: Build",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "CMake: Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build/Desktop-Release",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build/Desktop-Release",
                "--config",
                "Release",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "CTest: Run All Tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--output-on-failure",
                "--test-dir",
                "${workspaceFolder}/build/Desktop-Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "CTest: Run Tests Verbose",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--verbose",
                "--output-on-failure",
                "--test-dir",
                "${workspaceFolder}/build/Desktop-Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "problemMatcher": []
        }
    ]
}